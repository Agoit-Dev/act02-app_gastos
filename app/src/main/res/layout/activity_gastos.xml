<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Gasto"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del gasto"
        android:inputType="textPersonName"
        android:importantForAutofill="yes"
        android:minHeight="56dp"
        android:padding="10dp" />

    <EditText
        android:id="@+id/etFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha (dd/MM/yyyy)"
        android:inputType="date"
        android:importantForAutofill="yes"
        android:minHeight="56dp"
        android:padding="10dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/etValor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor"
        android:inputType="numberDecimal"
        android:importantForAutofill="yes"
        android:minHeight="56dp"
        android:padding="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categoría"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />
    <Spinner
        android:id="@+id/spCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:entries="@array/categorias_gasto" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Método de Pago"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />
    <Spinner
        android:id="@+id/spMetodoPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:entries="@array/metodos_pago" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estado del Gasto"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />
    <Spinner
        android:id="@+id/spEstado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:entries="@array/estados_gasto" />

    <EditText
        android:id="@+id/etNotas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Notas (opcional)"
        android:inputType="text"
        android:importantForAutofill="yes"
        android:minHeight="56dp"
        android:padding="10dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Gasto"
        android:textSize="18sp"
        android:backgroundTint="@android:color/holo_purple"
        android:textColor="@android:color/white"
        android:minHeight="56dp"
        android:layout_marginTop="20dp" />
</LinearLayout>